<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_warranty_expire_duration" model="ir.ui.view">
            <field name="name">warranty_expire_duration</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="36"/>
            <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='stock']/div[3]" position="inside">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="text-muted">
                                ToBe Expire Warranty Alert.
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="warranty_expire_duration"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
